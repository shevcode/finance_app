<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
      <h1 class="display-4 fw-normal">Транзакції</h1>
    </div>
  </div>
  <div class="row">
    <div class="p-3 pb-md-4 mx-auto ">
      <%= link_to " Додати транзакцію", new_operation_path, class: "btn btn-success bi bi-plus-square", role: "button", alt: "Add new"  %>
    </div>
  </div>
  <div class="row">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Категорія</th>
          <th scope="col">Тип</th>
          <th scope="col">Сума</th>
          <th scope="col">Дата</th>
          <th scope="col">Опис</th>
          <th scope="col">Управління</th>
        </tr>
      </thead>
      <tbody>
        <% @operations.each do |operation| %>
          <%= render operation %>
        <% end %>
      </tbody>
    </table>
    <%= paginate @operations %>
  </div>

</div>






