<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
      <h1 class="display-4 fw-normal"><%= Otype.model_name.human(:count => 2) %></h1>
    </div>
  </div>
  <div class="row">
    <div class="p-3 pb-md-4 mx-auto ">
      <%= link_to ' ' +   t('button_add') + ' ' +  Otype.model_name.human, new_otype_path, class: "btn btn-success bi bi-plus-square", role: "button", alt: "Add new"  %>
    </div>
  </div>
  <div class="row">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col"><%= t('activerecord.attributes.otype.title') %></th>
          <th scope="col"><%= t('button_configure') %></th>
        </tr>
      </thead>
      <tbody>
        <% @otypes.each do |otype| %>
          <%= render otype %>
        <% end %>
      </tbody>
    </table>
    <%= paginate @otypes %>
  </div>

</div>