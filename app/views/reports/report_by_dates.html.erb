<h1><%= @report.model_name.human %>: <%= @report.start_date %> - <%= @report.end_date %></h1>
<h2><%=@report.otype_name %>: <%=@report.category_name %></h2>
    <div class="row row-cols-1  mb-3 text-center">
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm">
          <div class="card-body">
            <canvas id="reportByDates"></canvas>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script>
            const ctx = document.getElementById('reportByDates');
            const data = {
            labels: <%= raw @dates %>,
            datasets: [{
                label: '<%= Operation.model_name.human(:count => 2) %>',
                data: <%= @amounts %>,
                fill: false,
                borderColor: 'rgb(75, 192, 192)',
                tension: 0.1
            }]
            };

            const config = {
            type: 'line',
            data: data
            };

            const reportByDates = new Chart(ctx, config);
            </script>
          </div>
        </div>
      </div>
    </div>
