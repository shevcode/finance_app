<tr id="<%= dom_id category %>">
      <th scope="row"><%= category.id %></th>
      <td><%= category.name %></td>
      <td><%= category.description %></td>
      <td>
        <div class="d-flex justify-content-around">
          <%= link_to "", edit_category_path(category), class: "btn btn-secondary btn-sm bi bi-pencil-square", role: "button", alt: "Delete"  %>
          <%= button_to "", category, method: :delete, class: "btn btn-danger btn-sm bi bi-x-square", alt: "Delete" %>
        </div>        
      </td>
</tr>